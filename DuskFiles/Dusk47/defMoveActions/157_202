if hasCondition trigger inforest2
	livingthing guard1 local trigger "Mutant Scorpion"
		if = guard1 locX 153
			if = guard1 locY 200
			set guard1 locxy 1 1
			end
		end
	livingthing guard2 local trigger "Mutant Scorpion"
		if = guard2 locX 153
			if = guard2 locY 202
			set guard2 locxy 1 1
			end
		end
	livingthing guard3 local trigger "Mutant Scorpion"
		if = guard3 locX 154
			if = guard3 locY 201
			set guard3 locxy 1 1
			end
		end
	chat trigger "you think *Dang! Those mutant scorpions are though.*"
	removeCondition trigger inforest2
	set trigger locxy 209 278
	endscript
end
if ! hasCondition trigger checktreasure
	chat trigger "Maybe I should check that threasure chest first."
	inc trigger locx -1
	endscript
end
#
set trigger locxy 209 278
endscript
end



