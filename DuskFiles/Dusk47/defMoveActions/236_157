#blacksmith script
if ! isPlayer trigger
	endscript
end
if and hasCondition trigger blacksmithnotz if < trigger cash 3000
	inc trigger locy 1
	chat trigger " NotZ says: Come back when you have enough money!"
	endscript
end
# Craft
if and hasItem trigger "crimsteel pickaxe template" hasItem trigger "5.crimsteel ingot"
	removeItem trigger "crimsteel pickaxe template"
	removeItem trigger "crimsteel ingot"
	removeItem trigger "crimsteel ingot"
	removeItem trigger "crimsteel ingot"
	removeItem trigger "crimsteel ingot"
	removeItem trigger "crimsteel ingot"
	giveitem trigger "crimsteel pickaxe"
	chat trigger " Here's a crimsteel pickaxe!"
	inc trigger cash -3000
	endscript
	end
