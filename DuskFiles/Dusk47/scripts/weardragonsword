# only players can use this weapon
if ! isPlayer trigger
	order trigger "unwear dragon sword"
	chat trigger "Only players can use this weapon"
	endscript
	end
# u need 1000cp to use it
if < trigger cp 1000
	order trigger "unwear dragon sword"
	chat trigger "You can't handle this weapon"
	endscript
	end
#
addCondition trigger dragonsword
endscript
	


