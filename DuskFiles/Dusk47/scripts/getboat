if ! hascondition trigger "allowedboat"
    chat trigger "The boat fades away as soon as you get it."
    chat trigger "It is as if you are not allowed to have a boat here."
    removeitem trigger "boat"
    endscript
end
if hasitem trigger "2.boat"
    chat trigger "The boat fades away as soon as you get it."
    chat trigger "It is as if you are not allowed to have more than one boat."
    removeitem trigger "boat"
    endscript
end
endscript



