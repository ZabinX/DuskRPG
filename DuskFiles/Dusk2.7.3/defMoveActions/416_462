if ! isWearing trigger fireproofjacket
	if > trigger hp 11
	chat trigger " YEEEEOOOUUUUCHHHHH!!!!!!! That's hot!"
	inc trigger hp -10
	endscript
	end
	if < trigger hp 11
	chat trigger "You died!"
	set trigger hp 1
	set trigger locxy 394 494
	endscript
	end
end
chat trigger "You pass through the fire unharmed"
endscript

