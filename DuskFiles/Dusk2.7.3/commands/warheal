#Warfire is here command
if < trigger privs 4
    chat trigger "huh?"
    endscript
end
if variableisstring param0
	livingthing target param0
	if variableislivingthing target
        		set target hp target maxhp
		set target mp target maxmp
		order trigger concat concat "gecho The fire elements flash in a burst of energy and the hand of Warfire heals " name target " back to full strength."
	end
	if ! isplayer target
		chat trigger "Who?"
	end
end
