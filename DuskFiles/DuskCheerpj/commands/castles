chat trigger "---------- Castle Info ----------"
if ! strequals "none" global strabo_name_keyholder
    chat trigger global strabo_name_keyholder
end
if ! strequals "nostraboclan" global straboclan
    chat trigger concat "Strabo is controlled by " global straboclan
    if strequals "nostraboclanally" global straboclanally
        chat trigger concat global straboclan " is not currently allied with another clan."
    end
    if ! strequals "nostraboclanally" global straboclanally
        chat trigger concat concat concat global straboclan " is allied with " global straboclanally "."
    end
end
if ! strequals "none" global baron_name_keyholder
    chat trigger global baron_name_keyholder
end
if ! strequals "nobaronclan" global baronclan
    chat trigger concat "Baron is controlled by " global baronclan
    if strequals "nobaronclanally" global baronclanally
        chat trigger concat global baronclan " is not currently allied with another clan."
    end
    if ! strequals "nobaronclanally" global baronclanally
        chat trigger concat concat concat global baronclan " is allied with " global baronclanally "."
    end
end
if ! strequals "none" global kilgore_name_keyholder
    chat trigger global kilgore_name_keyholder
end
if ! strequals "nokilgoreclan" global kilgoreclan
    chat trigger concat "Kilgore is controlled by " global kilgoreclan
    if strequals "nokilgoreclanally" global kilgoreclanally
        chat trigger concat global kilgoreclan " is not currently allied with another clan."
    end
    if ! strequals "nokilgoreclanally" global kilgoreclanally
        chat trigger concat concat concat global kilgoreclan " is allied with " global kilgoreclanally "."
    end
end
endscript

