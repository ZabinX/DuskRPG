if not variableisstring param0
	order trigger "emote laughs out loud."
	endscript
end
livingthing target local trigger param0
if not isplayer target
	chat trigger "You do not see them here."
	endscript
end
chat trigger concat concat "You laugh at " name target "."
chat target concat name trigger " laughs at you."
order trigger concat concat "emote laughs at " name target "."
endscript


